<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_repository"
    app:cardCornerRadius="24dp"
    android:layout_margin="4dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/photo_user"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="288dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/username"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_user"
            android:layout_marginStart="290dp"
            android:layout_marginTop="8dp"
            android:text="username"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/login"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="280dp"
            android:layout_marginTop="8dp"
            android:text="Nome Completo"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_repository"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/fork_qnty"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/star_qnty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_repository"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/star"
            android:text="501"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fork_qnty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_repository"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/fork"
            android:text="12354"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:text="Nome Repositório"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_repository"
            android:layout_width="226dp"
            android:layout_height="60dp"
            android:layout_below="@+id/repository_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="Descrição do repostiroioiopds daskopdacsacsacacsacascsacascascascascascas d ad d wd wqdw fsvdsfsfwes fasfafc ewbfv f v vkj vBERVGQG ERvV EUFIHUE"
            android:maxLines="3"/>

        <ImageView
            android:id="@+id/fork"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_below="@+id/description_repository"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/fork__1_" />


    </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>